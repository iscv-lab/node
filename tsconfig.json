{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "moduleResolution": "node",
    "sourceMap": false,
    "target": "ESNext",
    "baseUrl": ".",
    "allowJs": false,
    "alwaysStrict": false,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    // "noUncheckedIndexedAccess": true,
    "types": ["node"],
    "strictNullChecks": true,
    "module": "ESNext",
    "lib": [
      "dom",
      "es2015",
      "ES2016",
      "es2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ES2021",
      "ES2022"
    ],
    "paths": {
      "~controllers/*": ["./src/controllers/*"],
      "~cre/*": ["./src/cre/*"],
      "~models/*": ["./src/models/*"],
      "~middlewares/*": ["./src/middlewares/*"],
      "~utils/*": ["./src/utils/*"],
      "~routes/*": ["./src/routes/*"],
      "~helpers/*": ["./src/helpers/*"],
      "~contracts/*": ["./src/contracts/*"],
      "~configs/*": ["./src/configs/*"],
      "~graphql/*": ["./src/graphql/*"],
      "~typechain/*": ["./src/typechain/*"],
      "~types/*": ["./src/types/*"],
      "~blocks/*": ["./src/blocks/*"],
      "~constants/*": ["./src/constants/*"],
      "~/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["environment.d.ts", "./src/**/*.ts"]
}
